# Application Configuration
NODE_ENV=production
APP_PORT=5000

# Database Configuration
POSTGRES_USER=promissio
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=promissio_db
POSTGRES_PORT=5432

# Application Database URL (constructed from above values)
DATABASE_URL=postgresql://promissio:change_this_to_a_secure_password@postgres:5432/promissio_db

# Session Secret (REQUIRED - generate with: openssl rand -hex 32)
# NO DEFAULT VALUE - You MUST set this before starting!
SESSION_SECRET=

# Default Admin User Configuration
# These credentials will be used to create the initial admin account
# IMPORTANT: Change these after first login for security!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# SendGrid Email Configuration (Required for user invitations)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Optional: Object Storage Configuration (if using Google Cloud Storage)
# DEFAULT_OBJECT_STORAGE_BUCKET_ID=
# PUBLIC_OBJECT_SEARCH_PATHS=
# PRIVATE_OBJECT_DIR=
